{
  "name": "tailwind-react-ui-ts",
  "version": "0.1.0",
  "description": "tailwind-react-ui-ts",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "scripts": {
    "build": "rm -rf compiled build; tsc && rollup -c",
    "holder": " && yarn build:storybook",
    "build:docs": "yarn pre-build:docs && yarn build:storybook && yarn post-build:docs",
    "pre-build:docs": "yarn clean:storybook && yarn subtree:add:storybook && yarn pull:storybook",
    "post-build:docs": "yarn commit:storybook && yarn push:storybook",
    "build:storybook": "build-storybook -s public --docs",
    "clean:storybook": "rm -rf storybook-static || true && mkdir storybook-static",
    "subtree:add:storybook": "git subtree add --prefix storybook-static $PUSH_DOCS_REPO gh-pages || true",
    "pull:storybook": "git clone --single-branch --branch gh-pages $PUSH_DOCS_REPO storybook-static || true",
    "commit:storybook": "git add storybook-static && git commit -m 'Automated docs generation'",
    "push:storybook": "git push $PUSH_DOCS_REPO `git subtree split --prefix storybook-static`:gh-pages --force",
    "lint": "standard",
    "format": "prettier-standard --format",
    "test": "jest --coverage",
    "storybook": "start-storybook -p 6060",
    "storybook:noautoopen": "yarn storybook --ci"
  },
  "keywords": [],
  "author": {
    "name": "Ernesto Freyre",
    "email": "ernestofreyreg@gmail.com",
    "url": "https://medium.com/@efreyreg"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@storybook/addon-a11y": "^6.0.26",
    "@storybook/addon-docs": "^6.0.26",
    "@storybook/addon-viewport": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "jest": "^26.0.1",
    "prettier-standard": "^16.3.0",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "rollup": "^2.8.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "standard": "^14.3.3",
    "standard-prettier": "^1.0.1",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "build/"
    ]
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "build/",
      "compile/",
      "storybook-static",
      "holding"
    ],
    "globals": [
      "describe",
      "it",
      "test",
      "expect",
      "afterAll",
      "jest"
    ]
  },
  "dependencies": {
    "@types/classnames": "^2.2.10",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.includes": "^4.3.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/lodash.uniqueid": "^4.0.6",
    "@types/react-transition-group": "^4.4.0",
    "classnames": "^2.2.6",
    "lodash.get": "^4.4.2",
    "lodash.includes": "^4.3.0",
    "lodash.merge": "^4.6.2",
    "lodash.uniqueid": "^4.0.1",
    "param-case": "^3.0.3",
    "react-transition-group": "^4.4.1",
    "tailwindcss": "^1.9.2",
    "utility-types": "^3.10.0"
  }
}
